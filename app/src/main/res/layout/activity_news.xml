<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wolfpeng.androidframework.activity.NewsActivity">

    <include layout="@layout/include_common_toolbar"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_news"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabBackground="@color/colorWhite"
        app:tabIndicatorColor="@color/redThemeColor"
        app:tabIndicatorHeight="1dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/redThemeColor"
        app:tabTextColor="@color/colorBlack">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
