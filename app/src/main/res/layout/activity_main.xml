<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.wolfpeng.androidframework.activity.MainActivity">
    <include layout="@layout/include_common_toolbar"></include>

    <!--横向标签视图-->
    <LinearLayout
        android:id="@+id/ll_news_title_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout_news"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/redThemeColor"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/colorWhite"
            app:tabTextAppearance="@style/NewsTabLayoutTextAppearance"
            app:tabTextColor="@color/grayThemeColor"/>
    </LinearLayout>

    <!--列表内容主体-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_news_title_bar"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite"
        android:overScrollMode="never"
        android:scrollbars="none"/>

</LinearLayout>
